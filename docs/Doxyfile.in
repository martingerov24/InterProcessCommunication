#Doxyfile.in
PROJECT_NAME           = "@PROJECT_NAME@"
PROJECT_BRIEF          = "Inter-Process Communication server & clients"
OUTPUT_DIRECTORY       = "@CMAKE_BINARY_DIR@/doxygen"
GENERATE_HTML          = YES
GENERATE_LATEX         = NO

# Inputs
INPUT                  = @CMAKE_SOURCE_DIR@/include @CMAKE_SOURCE_DIR@/sources @CMAKE_SOURCE_DIR@/README.md
FILE_PATTERNS          = *.h *.hpp *.hh *.hxx *.c *.cc *.cpp *.md
RECURSIVE              = YES
EXTRACT_ALL            = YES          # good when code isnâ€™t fully commented yet
INLINE_SOURCES         = NO
EXCLUDE = @CMAKE_SOURCE_DIR@/sources/third_party

# Warnings
WARN_IF_UNDOCUMENTED   = NO
WARN_AS_ERROR          = NO

# For Sphinx/Breathe
GENERATE_XML           = YES
XML_OUTPUT             = xml

# Markup options
MARKDOWN_SUPPORT       = YES
AUTOLINK_SUPPORT       = YES